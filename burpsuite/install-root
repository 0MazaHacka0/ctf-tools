#!/bin/bash
set -eu -o pipefail

case "$DISTRI" in
    "ubuntu")
        ;&  # fallthrough
    "debian")

        apt-get -y install openjdk-7-jre
        ;;
    "archlinux")

        pacman -Syu --noconfirm --needed jre7-openjdk
        ;;
    *)
        echo "Unsupported distribution: ''"
        exit 1
        ;;
esac
