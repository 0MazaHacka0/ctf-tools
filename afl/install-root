#!/bin/bash
set -eu -o pipefail

case "$DISTRI" in
    "ubuntu")
        ;&  # fallthrough
    "debian")
        apt-get -y build-dep qemu
        apt-get -y install bison
        ;;
    "archlinux")
        pacman -Syu --noconfirm bison
        pacman -Syu --noconfirm qemu
        ;;
    *)
        echo "Unkown distribution"
        exit 1
        ;;
esac
