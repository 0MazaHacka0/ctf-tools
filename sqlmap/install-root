#!/bin/bash
set -eu -o pipefail

case "$DISTRI" in
    "ubuntu")
        ;&  # fallthrough
    "debian")
        apt-get -y install libsqlite3-dev
        ;;
    "archlinux")
        pacman -Syu --noconfirm --needed sqlite
        ;;
    *)
        echo "Unsupported distribution: ''"
        exit 1
        ;;
esac
