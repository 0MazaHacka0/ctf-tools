#!/bin/bash
set -eu -o pipefail

case "$DISTRI" in
    "ubuntu")
        ;&  # fallthrough
    "debian")

        apt-get -y install texinfo
        ;;
    "archlinux")
        echo "archlinux is currently not supported!"
        echo "Update install-root and do a pull-request ;)"
        exit 1
        ;;
    *)
        echo "Unsupported distribution: ''"
        exit 1
        ;;
esac
