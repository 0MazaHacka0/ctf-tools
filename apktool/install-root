#!/bin/bash
set -eu -o pipefail

case "$DISTRI" in
    "ubuntu")
        ;&  # fallthrough
    "debian")
        apt-get install -y default-jre
        ;;
    "archlinux")
        pacman -Syu --noconfirm --needed jre8-openjdk
        ;;
    *)
        echo "Unsupported distribution: ''"
        exit 1
        ;;
esac
